<h1>Accounts#show</h1>
<% if current_account == @account%>
	<%= @account.username%>
	<br>
	<%= @account.email%>
	<br>
	<table class="center">
		<tr>
			<th><h2>Friends List</h2></th>
		</tr>
		<tr>
			<% for friendship in @account.friendships %>
			<td>
				<%=friendship.friend.username %>
			</td>
			<td>
				<%= button_to "remove", friendship, :method => :delete %>
			</td>
			<% end %>
		</tr>
	</table>
	<h2>Followers</h2>
	<ul>
	  <% for account in @account.inverse_friends %>
	    <li><%=h account.username %></li>
	  <% end %>
	</ul>

<%else%>
	<%= @account.username%>
	<br>
	<%= @account.email%>
	<br>
	<% if friendship == @account%>
		<%= button_to "Friend Added", friendships_path(:friend_id => @account), :method => :post %>
	<%else%>
		<%= button_to "Add Friend", friendships_path(:friend_id => @account), :method => :post %>
	<%end%>
<%end%>



